<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.34"
            app:layout_constraintVertical_bias="0.335" android:id="@+id/textView2" android:textColor="#CDFFFFFF"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nombreUsuarioInput"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.386" style="#F2F2F2"/>
    <TextView
            android:text="Contraseña"
            android:layout_width="118dp"
            android:layout_height="18dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.337" app:layout_constraintVertical_bias="0.472"
            android:textColor="#FFFFFF"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ContraseñaInput"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.533" style="#F2F2F2"/>
    <Button
            android:text="Ingresar"
            android:layout_width="124dp"
            android:layout_height="37dp" android:id="@+id/botonIngresar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.777" app:layout_constraintVertical_bias="0.713" style="#F2F2F2"
            android:onClick="ingresar"/>
    <Button
            android:text="Registrarse"
            android:layout_width="123dp"
            android:layout_height="39dp" android:id="@+id/botonRegistrar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.18" app:layout_constraintVertical_bias="0.715" style="#F2F2F2"
            android:onClick="registrarse"/>
    <ImageView
            android:layout_width="242dp"
            android:layout_height="121dp" app:srcCompat="@mipmap/cliente"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.07" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            tools:ignore="VectorDrawableCompat" android:background="#FFFFFF"
            android:scrollbarTrackVertical="@drawable/ic_launcher_foreground" tools:srcCompat="@mipmap/cliente"
            android:foreground="@mipmap/cliente"/>

</androidx.constraintlayout.widget.ConstraintLayout>